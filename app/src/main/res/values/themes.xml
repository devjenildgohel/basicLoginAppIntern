<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BasicLoginApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">25dp</item>
        <item name="boxCornerRadiusBottomStart">25dp</item>
        <item name="boxCornerRadiusTopEnd">25dp</item>
        <item name="boxCornerRadiusTopStart">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="hintTextColor">@color/black</item>
        <item name="errorTextAppearance">@color/design_default_color_error</item>
        <item name="boxStrokeErrorColor">@android:color/holo_red_dark</item>
        <item name="boxStrokeColor">@color/black</item>
        <item  name="boxStrokeWidth">3dp</item>
        <item name="errorIconDrawable">@null</item>
    </style>
    
    <style name="TextInputEditTextStyle">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name = "errorEnabled">true</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="TextInputLayoutPasswordStyle" parent="TextInputLayoutStyle">
        <item name="passwordToggleEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
    </style>
    
    <style name="buttonStyle">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        </style>

</resources>