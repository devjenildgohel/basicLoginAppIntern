<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/dummy_logo"
        app:layout_constraintBottom_toTopOf="@id/loginArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />


    <ScrollView
        android:id="@+id/loginArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            >

            <TextView
                android:id="@+id/RegisterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_centerHorizontal="true"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/nameEditext"
                android:layout_below="@+id/RegisterText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:hint="@string/email_hint"
                android:padding="15sp"
                android:layout_marginBottom="10dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="15dp"
                />

            <EditText
                android:id="@+id/emailEditext"
                android:layout_below="@+id/nameEditext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:hint="@string/email_hint"
                android:padding="15sp"
                android:layout_marginBottom="10dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="15dp"
                />

            <EditText
                android:id="@+id/passwordEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailEditext"
                android:background="@drawable/edittext_bg"
                android:hint="@string/password_hint"
                android:padding="15sp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="7dp"
                android:drawableStart="@drawable/ic_baseline_password_24"
                android:drawablePadding="15dp"
                />

            <EditText
                android:id="@+id/reType_passwordEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passwordEdittext"
                android:background="@drawable/edittext_bg"
                android:hint="Re-Type Password"
                android:padding="15sp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableStart="@drawable/ic_baseline_password_24"
                android:drawablePadding="15dp"
                />

            <CheckBox
                android:id="@+id/showPasswordCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reType_passwordEdittext"
                android:hint="Show Password"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registerButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/showPasswordCheckbox"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>